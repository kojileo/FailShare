{
  "name": "mobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "start:dev": "cross-env EXPO_PUBLIC_ENVIRONMENT=development expo start",
    "start:staging": "cross-env EXPO_PUBLIC_ENVIRONMENT=staging expo start",
    "start:prod": "cross-env EXPO_PUBLIC_ENVIRONMENT=production expo start",
    "preview:dev": "expo start --dev-client",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "detox test",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:web": "expo export --platform web",
    "build:web:dev": "cross-env EXPO_PUBLIC_ENVIRONMENT=development expo export --platform web",
    "build:web:staging": "cross-env EXPO_PUBLIC_ENVIRONMENT=staging expo export --platform web",
    "build:web:prod": "cross-env EXPO_PUBLIC_ENVIRONMENT=production expo export --platform web",
    "server:start": "node server.js",
    "server:dev": "npm run build:web:dev && npm run server:start",
    "server:prod": "npm run build:web:prod && npm run server:start",
    "build": "expo build",
    "seed-data": "node scripts/seed-data.js",
    "seed-data:dev": "node scripts/seed-data.js --env=dev",
    "seed-data:staging": "node scripts/seed-data.js --env=staging",
    "seed-data:prod": "node scripts/seed-data.js --env=prod"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.23",
    "@react-navigation/stack": "^7.4.2",
    "dotenv": "^17.2.0",
    "expo": "~53.0.17",
    "expo-constants": "~17.1.7",
    "expo-dev-client": "~5.2.4",
    "expo-linear-gradient": "^14.1.5",
    "expo-status-bar": "~2.2.3",
    "express": "^4.21.2",
    "firebase": "^11.10.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-paper": "^5.14.5",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-vector-icons": "^10.2.0",
    "react-native-web": "^0.20.0",
    "swr": "^2.3.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/js": "^9.32.0",
    "@expo/cli": "latest",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^12.7.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "cross-env": "^7.0.3",
    "detox": "^20.28.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "firebase-admin": "^12.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.3",
    "react-native-testing-library": "^2.2.0",
    "react-test-renderer": "19.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "private": true,
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "__tests__/__mocks__",
      "__tests__/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|@expo|expo|react-native-vector-icons|react-native-safe-area-context|react-native-paper|expo-linear-gradient)/)"
    ]
  },
  "detox": {
    "testRunner": {
      "runner": "jest",
      "args": {
        "config": "e2e/jest.config.js",
        "maxWorkers": 1
      }
    },
    "apps": {
      "ios.debug": {
        "type": "ios.app",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/mobile.app"
      },
      "android.debug": {
        "type": "android.apk",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk"
      }
    },
    "devices": {
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 15"
        }
      },
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3a_API_30_x86"
        }
      }
    },
    "configurations": {
      "ios.sim.debug": {
        "device": "simulator",
        "app": "ios.debug"
      },
      "android.emu.debug": {
        "device": "emulator",
        "app": "android.debug"
      }
    }
  }
}
